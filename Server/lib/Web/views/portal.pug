extends layout

block Subject
	title= L('title')

block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')

block Middle
	+separator(5)
	div
		div#topDiv
			h3#holder= L('title').replace(/\[.+?\]/g, "")
			img#logo(src='/img/kkutu/short_logo.png')
		div.jjoriping
			img.jjoObj.jjoEyeL(src='/img/jjoeyeL.png')
			img.jjoObj.jjoNose(src='/img/jjonose.png')
			img.jjoObj.jjoEyeR(src='/img/jjoeyeR.png')
			.jjoDisplayBar
				button#game-start.jjo-display= L('gameStart')
		#menu-bar
			a(target='_blank', href='//vycompany.esy.es', style='background-color: #63A95B;')= L('comm')
			a(target='_blank', href='https://discord.gg/jV5Panb', style='background-color: #7289DA;')= L('discord')
			a(target='_blank', href='//veatyou.kro.kr', style='background-color: #ff0000;')= L('portal')
			//- a(target='_blank', href='//open.kakao.com/o/gdwyeaw/', style='background-color: #ffbf00;')= L('kakao')
		br
		br
	div(style='float: right; margin-top: 10px; width: 100%;')
		div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #AAA; font-size: 13px;')
			div#server-list
	div(style='width: calc(99% - 4px); border: 2px solid #CCC; margin-top: 70px; background-color: #EEE;')
		iframe#kkutu-bulletin(width='100%', height='580px', src='/kkutu_bulletin.html')
	+separator(10)

block Bottom
	div.bottom-legal!= L('dictionarySupport')
	div.bottom-legal!= L('etcSupport')
